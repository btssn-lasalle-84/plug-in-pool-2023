<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/nomJoueur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom" />

        <TextView
            android:id="@+id/scoreElo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scoreELO" />

        <TextView
            android:id="@+id/nbManches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de manches" />

        <TextView
            android:id="@+id/nbVictoires"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de victoires" />

        <Button
            android:id="@+id/boutonSupprimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supprimer" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>